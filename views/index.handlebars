<div class="container">
    <div class="row">
        <div class="col-5">
            <button type="button" class="btn-lg btn-dark mx-3 addVehicleBtn">Add Vehicle</button>
        </div>
        <div class="col-5">
            <button type="button" class="btn-lg btn-dark mx-3 updateBtn">Update Vehicle</button>
        </div>
    </div>
</div>


<div class="container">
        <div class = "row p-5">
            <div class = "col">
                <h1>Vehicles: </h1>
                <ol class="list-group mb-3">
                    {{#each vehicle}}
                           <li class="m-2">
                               <div class="row">
                                   <div class="col-9">
                                       <h5>{{vehicleName}}</h5>
                                   </div>
                                   <div class="col-3">
                                       <button type="button" class="btn btn-dark mx-3 change-eaten" data-id="{{id}}" data-neweaten= "1">View Details</button>
                                   </div>
                               </div>  
                            </li>
                    {{/each}}
                </ol>
            </div>
            <div class = "col">
                <h1>Vehicle Details: </h1>
                <ol class="list-group mb-3">
                    {{#each vehicle}}
                        <li class="m-2">
                            <div class="row">
                                <div class="col-10">
                                    <h5>{{vehicleName}}</h5>
                                </div>
                                <div class="col-2">
                                    <button type="button" class="btn btn-dark mx-3 deleteBtn" data-id="{{id}}">Delete Vehicle</button>
                                    <button type="button" class="btn btn-dark mx-3 deleteBtn" data-id="{{id}}">Update Vehicle</button>
                                </div>
                            </div>
                        </li>
                    {{/each}}
                </ol>
            </div>
        </div>
    </div>
